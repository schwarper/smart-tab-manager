{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.1",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "icons": { "48": "icons/icon48.png", "128": "icons/icon128.png" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "48": "icons/icon48.png" }
  },
  "permissions": ["storage", "alarms", "tabs", "tabGroups", "notifications", "contextMenus", "scripting"],
  "background": { "service_worker": "background.js" },
  "host_permissions": [ "<all_urls>" ],
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": [ "content_script.js" ],
    "run_at": "document_idle"
  }],
  "commands": {
    "suspend-current-tab": { "description": "__MSG_contextMenuSuspendThisTab__" }
  }
}